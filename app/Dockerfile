# ---- Build stage ----
FROM public.ecr.aws/lambda/python:3.11 AS builder

WORKDIR /app
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# ---- Runtime stage ----
FROM python:3.11-slim

WORKDIR /app

COPY --from=builder /var/lang/lib/python3.11/site-packages /usr/local/lib/python3.11/site-packages
COPY app.py .

EXPOSE 5000
CMD ["python", "app.py"]
